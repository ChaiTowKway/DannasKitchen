<% layout('layouts/boilerplate') %> 
<h1>Your Cart</h1>
<h3>Total Price: $<%=prices%></h3>
<a class="btn btn-primary btn-success" href="/checkout">Checkout</a>
<p></p>
<div>
    <a href="/mainpage">Add Item</a>
</div>

<% for (let dish of dishes) {%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%=dish.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a class="btn btn-primary" href="/mainpage/<%= dish._id %>"><%= dish.title %></a>
                    <p></p>
                    <h5 class="card-title">$<%= dish.price%></h5>
                    <form action="/cart/<%=dish._id%>?_method=DELETE" method="POST">       
                        <button class="btn btn-sm btn-danger">Remove from cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% }%> 
