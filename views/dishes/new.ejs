<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Dish</h1>
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow">
            <div class="card-body">
                <form action="/mainpage" method="POST" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-lable" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="dish[title]" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <!-- <input type="file" name="image" id="" multiple> -->
                    <div class="mb-3">
                        <label class="form-lable" for="image">Image Url</label>
                        <input class="form-control" type="text" id="image" name="dish[image]" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-lable" for="price">Dish Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input class="form-control" type="text" id="price" placeholder="0.00", aria-lable="price", 
                            aria-describedby="price-label" name="dish[price]" required>
                        </div>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-lable" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" 
                        name="dish[description]" required> </textarea>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Dish</button>
                    </div>
                </form>
                <a href="/mainpage">All Options</a>
            </div>
        </div>
    </div>
</div>


